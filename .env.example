# =============================================================================
# TRADING BOT CONFIGURATION
# =============================================================================
# Copia este archivo a .env y configura tus valores reales
# NUNCA subas el archivo .env al repositorio

# =============================================================================
# BINANCE API CREDENTIALS
# =============================================================================
# Obtén estas credenciales desde tu cuenta de Binance
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_key_here
BINANCE_TESTNET=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Lista de símbolos para trading (separados por coma)
SYMBOLS=BTCUSDT,ETHUSDT
BASE_ASSET=USDT

# Gestión de posiciones y riesgo
MAX_POSITION_PERCENT=0.02        # 2% máximo del balance por posición
MIN_ORDER_AMOUNT=10              # Monto mínimo de orden en USDT
MAX_DAILY_LOSS_PERCENT=0.05      # 5% pérdida máxima diaria
STOP_LOSS_PERCENT=0.02           # 2% stop loss automático
TAKE_PROFIT_PERCENT=0.04         # 4% take profit automático
MAX_OPEN_POSITIONS=3             # Máximo 3 posiciones abiertas

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
MODEL_PATH=models/tcn_anti_bias_fixed.h5
SCALERS_PATH=models/feature_scalers_fixed.pkl
MODEL_CONFIDENCE_THRESHOLD=0.7   # Confianza mínima para ejecutar trade
PREDICTION_INTERVAL_MINUTES=5    # Intervalo de predicción
DATA_WINDOW_SIZE=100             # Tamaño de ventana de datos

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///database/trading_bot.db
# Para PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/trading_bot

DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO                   # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_FILE_PATH=logs/trading_bot.log
LOG_ROTATION=1 day
LOG_RETENTION=30                 # Días de retención de logs

# =============================================================================
# NOTIFICATIONS
# =============================================================================
ENABLE_NOTIFICATIONS=false
WEBHOOK_URL=https://your-webhook-url.com/webhook
NOTIFY_TRADES=true
NOTIFY_SIGNALS=true
NOTIFY_ERRORS=true

# =============================================================================
# ENVIRONMENT & SAFETY
# =============================================================================
ENVIRONMENT=development          # development, staging, production
DEBUG_MODE=false
DRY_RUN=true                    # IMPORTANTE: true = no ejecuta trades reales

# =============================================================================
# RATE LIMITING
# =============================================================================
API_RATE_LIMIT=1200             # Requests por minuto
ORDER_COOLDOWN_SECONDS=5        # Tiempo entre órdenes

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# Solo modificar si sabes lo que haces
# Configuraciones avanzadas para fine-tuning del sistema 